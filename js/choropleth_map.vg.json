{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Live Births in Australian States",
    "subtitle": "Data on New Mothers and Live Births in Australia",
    "fontSize": 20,
    "font": "Roboto",
    "anchor": "start",
    "color": "black"
  },
  "width": 1230,
  "height": 600,
  "background": null,
  "config": {
    "font": "Roboto",
    "title": {
      "font": "Roboto"
    },
    "axis": {
      "labelFont": "Roboto",
      "titleFont": "Roboto",
      "grid": true,
      "gridColor": "#e0e0e0"
    },
    "legend": {
      "labelFont": "Roboto",
      "titleFont": "Roboto"
    }
  },
  "projection": {
    "type": "equirectangular",
    "scale": 800,
    "center": [133.7751, -25.2744]
  },
  "data": {
    "url": "https://raw.githubusercontent.com/arvinloh/FIT3179_A2/refs/heads/main/data/ne.json",
    "format": {
      "type": "topojson",
      "feature": "ne_50m_admin_1_states_provinces"
    }
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/arvinloh/FIT3179_A2/refs/heads/main/data/data.csv",
          "format": { "type": "csv" }
        },
        "key": "State",
        "fields": [
          "live births",
          "mothers",
          "fetal deaths",
          "not stated",
          "total",
          "male",
          "female"
        ]
      }
    },
    {
      "filter": "datum.State !== 'Australia'"
    },
    {
      "calculate": "datum['live births']",
      "as": "live_births"
    },
    {
      "calculate": "datum['live births'] / 313407 * 100",
      "as": "percentage_live_births"
    }
  ],
  "layer": [
    {
      "data": {
        "graticule": true
      },
      "mark": {
        "type": "geoshape",
        "stroke": "gray",
        "strokeWidth": 0.5
      }
    },
    {
      "mark": {
        "type": "geoshape",
        "stroke": "#b3b3b3",
        "strokeWidth": 1
      },
      "encoding": {
        "color": {
          "field": "live_births",
          "type": "quantitative",
          "scale": { "scheme": "blues" },
          "legend": { "title": "Live Births" }
        },
        "tooltip": [
          { "field": "properties.name", "type": "nominal", "title": "State" },
          {
            "field": "live_births",
            "type": "quantitative",
            "title": "Live Births"
          },
          {
            "field": "mothers",
            "type": "quantitative",
            "title": "New Mothers"
          },
          {
            "field": "total",
            "type": "quantitative",
            "title": "Total Live Births"
          },
          {
            "field": "percentage_live_births",
            "type": "quantitative",
            "title": "Percentage of Live Births",
            "format": ".2f"
          }
        ]
      }
    }
  ]
}
