{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Live Births in Australian States",
    "subtitle": "Data on Mothers, Fetal Deaths, Live Births, Males, and Females",
    "fontSize": 20,
    "font": "Roboto",
    "anchor": "start",
    "color": "black"
  },
  "width": 815,
  "height": 540,
  "background": "lightblue",
  "config": {
    "font": "Roboto",
    "title": {
      "font": "Roboto"
    },
    "axis": {
      "labelFont": "Roboto",
      "titleFont": "Roboto"
    },
    "legend": {
      "labelFont": "Roboto",
      "titleFont": "Roboto"
    }
  },
  "projection": {
    "type": "equirectangular"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/arvinloh/FIT3179_A2/refs/heads/main/data/ne_50m_admin_1_states_provinces.json?token=GHSAT0AAAAAACXMFL3Z24WAVIF3WCL5ITHYZYF4S2Q",
    "format": {
      "type": "topojson",
      "feature": "ne_50m_admin_1_states_provinces"
    }
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/arvinloh/FIT3179_A2/refs/heads/main/data/data.csv?token=GHSAT0AAAAAACXMFL3YXYBML4EGG27YG3R2ZYF4R6A",
          "format": { "type": "csv" }
        },
        "key": "State",
        "fields": ["live births", "mothers", "fetal deaths", "not stated", "total", "male", "female"]
      }
    },
    {
      "filter": "datum.State !== 'Australia'"
    },
    {
      "calculate": "datum['live births']",
      "as": "live_births"
    },
    {
      "calculate": "datum['live births'] / 313407 * 100",
      "as": "percentage_live_births"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "color": {
          "field": "live_births",
          "type": "quantitative",
          "scale": { "scheme": "blues" },
          "legend": { "title": "Live Births" }
        },
        "tooltip": [
          { "field": "properties.name", "type": "nominal", "title": "State" },
          { "field": "live_births", "type": "quantitative", "title": "Live Births" },
          { "field": "mothers", "type": "quantitative", "title": "New Mothers" },
          { "field": "fetal deaths", "type": "quantitative", "title": "Fetal Deaths" },
          { "field": "male", "type": "quantitative", "title": "Male Live Births" },
          { "field": "female", "type": "quantitative", "title": "Female Live Births" },
          { "field": "not stated", "type": "quantitative", "title": "Not Stated" },
          { "field": "total", "type": "quantitative", "title": "Total Live Births" },
          { 
            "field": "percentage_live_births", 
            "type": "quantitative", 
            "title": "Percentage of Live Births", 
            "format": ".2f" 
          }
        ]
      }
    }
  ]
}
