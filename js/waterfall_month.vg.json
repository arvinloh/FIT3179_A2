{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1200,
  "height": 600,
  "title": {
    "text": "Monthly Births by State in Australia",
    "subtitle": "Data on birth months in Australia",
    "fontSize": 25,
    "subtitleFontSize": 20,
    "font": "Roboto",
    "anchor": "start",
    "color": "black"
  },
  "background": null,
